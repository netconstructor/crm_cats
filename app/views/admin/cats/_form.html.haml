- edit ||= false
.section
  %table(width=500 cellpadding=0 cellspacing=0)
    %tr
      %td(valign="top")
        .label.top.req #{t :name}:
        = f.text_field :name, :style => "width:240px"
        = f.hidden_field :cat_type
        = f.hidden_field :parent_id
    %tr
      %td(valign="top")
        .label #{t :description}:
        = f.text_area :description, :style =>"width:240px", :rows => 4
